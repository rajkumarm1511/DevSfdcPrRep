<apex:page sidebar="false" showHeader="false" standardStylesheets="false">

  <apex:form >  
      <apex:stylesheet value="{!URLFOR($Resource.ApolloUI,'css/apollo.min.css')}" />    
      
      
      <center>
      <h1 class="control-label" style="margin-top:40px;font-weight:500;"> Employee Login </h1>
      <div class="login" style="margin-top:25px;">
  <svg class="login-brand-logo" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 103.86 120"><path style="fill: #2975e9;opacity: .5;" d="M60,0L8.07,30V90L60,120l51.93-30V30Zm0,99.07L57.95,97.9,28.22,80.68l-2.05-1.17v-39l2.05-1.17L57.95,22.1,60,20.93l2.05,1.17L91.78,39.22l2.05,1.17V79.51l-2.05,1.17L62.05,97.8Z" transform="translate(-8.07)"/><polygon style="fill: #2975e9;" points="22.69 43.13 22.69 76.87 51.93 93.79 81.17 76.87 81.17 43.13 51.93 26.21 22.69 43.13"/></svg>
  <h1 class="login-brand-name">Ness Technologies</h1>
  <form autocomplete="off">
    <div class="form-group">
      <label class="control-label" for="login-email">Email address</label>
      <input class="form-control" type="email" name="email" id="login-email" spellcheck="false" />
    </div>
    <div class="form-group">
      <label class="control-label" for="login-password">Password</label>
      <input class="form-control" type="password" name="password" id="login-password" />
    </div>
    <div class="login-help">
      <div class="checkbox">
        <label class="control-label">
          <input type="checkbox" name="rememberme" id="login-rememberme" />
          Remember me
        </label>
      </div>
      <a href="#0">Forgot password</a>
    </div>
    <div class="form-group text-xs-center">
      <button class="btn btn-primary btn-block" type="submit">Login</button>
    </div>
  </form>
</div>
</center> 

<apex:includeScript value="{!URLFOR($Resource.ApolloUI,'js/jquery.min.js')}" />
<apex:includeScript value="{!URLFOR($Resource.ApolloUI,'js/tether.min.js')}" />
<apex:includeScript value="{!URLFOR($Resource.ApolloUI,'js/apollo.min.js')}" /> 
</apex:form>
  
</apex:page>